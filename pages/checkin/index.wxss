/* 页面容器 */
.container {
  padding: 24rpx;
  box-sizing: border-box;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4285f4;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 活动标题 */
.activity-header {
  margin-bottom: 24rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* 位置卡片 */
.location-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.location-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.location-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.refresh-btn {
  font-size: 26rpx;
  color: #4285f4;
}

.location-info {
  margin-top: 16rpx;
}

.location-coords {
  margin-bottom: 16rpx;
}

.coords-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.coords-value {
  font-size: 26rpx;
  color: #333;
}

.nearest-checkpoint {
  margin-top: 16rpx;
}

.checkpoint-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.checkpoint-distance {
  font-size: 26rpx;
  color: #666;
}

.status {
  margin-left: 8rpx;
}

.status.in-range {
  color: #4CAF50;
}

.status.out-range {
  color: #F44336;
}

.no-location {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  color: #999;
}

.btn-get-location {
  margin-top: 16rpx;
  background-color: #4285f4;
  color: #fff;
  font-size: 26rpx;
  padding: 12rpx 32rpx;
  border-radius: 100rpx;
}

/* 打卡表单 */
.checkin-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
  position: relative;
}

.checkin-text {
  width: 100%;
  height: 160rpx;
  padding: 16rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.text-counter {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传 */
.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-picker {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.picker-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.picker-text {
  font-size: 24rpx;
  color: #999;
}

.image-tip {
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮 */
.btn-container {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.btn-submit {
  background-color: #4CAF50;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 100rpx;
  text-align: center;
  width: 100%;
}

.btn-submit.disabled {
  background-color: #cccccc;
  color: #fff;
} 