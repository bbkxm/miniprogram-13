/* 页面容器 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); /* 为底部按钮留出空间 */
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding-top: 44px; /* 状态栏高度 */
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-back {
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  padding-right: 88rpx; /* 为了保持标题居中 */
}

.container {
  padding: 24rpx;
  box-sizing: border-box;
  margin-top: calc(88rpx + 44px); /* 导航栏高度 + 状态栏高度 */
}

/* 表单内容 */
.form-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

/* 表单组件 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #f44336;
}

.form-control {
  width: 100%;
  height: 80rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 分类选择器 */
.form-picker {
  width: 100%;
  height: 80rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.picker-value {
  color: #333;
}

.picker-value:empty::before {
  content: '请选择活动分类';
  color: #999;
}

/* 封面图片 */
.form-cover {
  position: relative;
}

.cover-image {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.cover-change {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 100rpx;
}

.cover-picker {
  width: 100%;
  height: 320rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
}

.picker-icon {
  font-size: 72rpx;
  color: #ddd;
  margin-bottom: 16rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #999;
}

/* 时间选择 */
.time-container {
  display: flex;
  align-items: center;
}

.time-item {
  flex: 1;
}

.time-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.time-picker {
  padding: 16rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.time-separator {
  margin: 0 16rpx;
  color: #999;
  margin-top: 32rpx;
}

/* 位置选择 */
.location-picker {
  padding: 16rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.location-coordinates {
  font-size: 24rpx;
  color: #999;
}

.location-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.location-icon {
  margin-right: 8rpx;
}

/* 打卡点列表 */
.checkpoint-container {
  padding: 16rpx 0;
}

.checkpoint-empty {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
}

.checkpoint-list {
  margin-bottom: 24rpx;
}

.checkpoint-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.checkpoint-index {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  margin-right: 16rpx;
}

.checkpoint-info {
  flex: 1;
}

.checkpoint-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.checkpoint-coordinates {
  font-size: 24rpx;
  color: #999;
}

.checkpoint-delete {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 32rpx;
}

.checkpoint-add {
  padding: 16rpx;
  text-align: center;
  color: #4285f4;
  font-size: 28rpx;
  border: 1rpx dashed #4285f4;
  border-radius: 8rpx;
}

/* 底部按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn-primary {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff9800;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
  text-align: center;
  padding: 0 60rpx;
  margin: 0 10rpx;
  flex: 1;
}

.btn-primary.disabled {
  background-color: #ccc;
  opacity: 0.7;
}

/* 日期时间选择器 */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.picker-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.picker-cancel,
.picker-confirm {
  font-size: 28rpx;
  color: #4285f4;
  padding: 0 24rpx;
}

.picker-view {
  height: 400rpx;
}

.picker-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #999;
  font-size: 28rpx;
} 