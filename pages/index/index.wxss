/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* È°µÈù¢ÂÆπÂô® */
.container {
  padding: 0;
  box-sizing: border-box;
}

/* È°∂ÈÉ®TabÊ†è */
.tabs-container {
  display: flex;
  background-color: #fff;
  padding: 0 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4285f4;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #4285f4;
  border-radius: 3rpx;
}

/* Ê¥ªÂä®ÂàóË°®ÂÆπÂô® */
.activities-container {
  padding: 24rpx 24rpx 120rpx 24rpx;
}

/* Ê¥ªÂä®Âç°Áâá */
.activity-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.activity-cover {
  width: 100%;
  height: 320rpx;
}

.activity-info {
  padding: 24rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.activity-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.activity-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  color: #999;
  font-size: 24rpx;
}

.activity-location, .activity-distance {
  display: flex;
  align-items: center;
}

.iconfont {
  margin-right: 8rpx;
}

/* ‰ΩøÁî®‰º™ÂÖÉÁ¥†‰ª£ÊõøÁº∫Â§±ÁöÑÂõæÊ†áÂ≠ó‰Ωì */
.icon-location::before {
  content: 'üìç';
}

.icon-distance::before {
  content: 'üß≠';
}

.activity-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.activity-creator {
  display: flex;
  align-items: center;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.activity-participants {
  display: flex;
  align-items: center;
}

.participants-count {
  font-size: 24rpx;
  color: #999;
  margin-right: 12rpx;
}

.avatar-group {
  display: flex;
}

.avatar-small {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-left: -10rpx;
}

.avatar-small:first-child {
  margin-left: 0;
}

.avatar-more {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  margin-left: -10rpx;
}

/* ÊÇ¨ÊµÆÊåâÈíÆ */
.fab-button {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #4285f4;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(66, 133, 244, 0.3);
  z-index: 99;
}

.fab-button text {
  font-size: 56rpx;
  font-weight: 300;
}

/* Âä†ËΩΩ‰∏≠Áä∂ÊÄÅ */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4285f4;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Á©∫Áä∂ÊÄÅ */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
  margin-bottom: 40rpx;
}

.btn-create {
  margin-top: 40rpx;
  background-color: #4285f4;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 100rpx;
}
