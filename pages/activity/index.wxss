  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.checkin-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.checkin-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.checkin-user-info {
  flex: 1;
}

.checkin-nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.checkin-time {
  font-size: 24rpx;
  color: #999;
}

.checkin-content {
