}

/* Â∫ïÈÉ®Êìç‰ΩúÊ†è */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 24rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.btn-join, .btn-quit, .btn-checkin, .btn-share {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-join {
  background-color: #4285f4;
  color: #fff;
}

.btn-quit {
  background-color: #f8f8f8;
  color: #666;
