}

.checkin-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.checkin-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.checkin-image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
}

.checkin-location {
  font-size: 24rpx;
