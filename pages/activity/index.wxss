/* È°µÈù¢ÂÆπÂô® */
.container {
  padding: 0;
  box-sizing: border-box;
  padding-bottom: 120rpx; /* ‰∏∫Â∫ïÈÉ®Êìç‰ΩúÊ†èÁïôÂá∫Á©∫Èó¥ */
}

/* Âä†ËΩΩ‰∏≠ */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4285f4;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Â∞ÅÈù¢ */
.cover-container {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
}

.activity-title {
  position: absolute;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* TabÂàáÊç¢ */
.tabs-container {
  display: flex;
  background-color: #fff;
  padding: 0 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4285f4;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #4285f4;
  border-radius: 3rpx;
}

/* ‰ø°ÊÅØÂç°Áâá */
.info-container, .checkins-container {
  padding: 24rpx;
}

.info-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-section {
  margin-bottom: 24rpx;
}

.info-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.section-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

/* Âç°ÁâáÂ§¥ÈÉ® */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.view-map {
  font-size: 26rpx;
  color: #4285f4;
  padding: 10rpx 20rpx;
  border: 1rpx solid #4285f4;
  border-radius: 30rpx;
}

.view-map-hover {
  background-color: #4285f4;
  color: #ffffff;
}

/* ÊâìÂç°ÁÇπÂàóË°® */
.checkpoint-list {
  display: flex;
  flex-direction: column;
}

.checkpoint-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.checkpoint-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.checkpoint-index {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #4285f4;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.checkpoint-info {
  flex: 1;
}

.checkpoint-name {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.checkpoint-coordinates {
  font-size: 24rpx;
  color: #999;
}

/* ÂèÇ‰∏éËÄÖÂàóË°® */
.participants-list {
  display: flex;
  flex-wrap: wrap;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  margin-bottom: 24rpx;
  position: relative;
}

.participant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.participant-name {
  font-size: 24rpx;
  color: #666;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.creator-badge {
  position: absolute;
  top: 0;
  right: 12rpx;
  background-color: #FF9800;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  transform: scale(0.8);
}

/* ÊâìÂç°ËÆ∞ÂΩï */
