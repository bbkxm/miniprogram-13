}

/* Á©∫ÊâìÂç°ËÆ∞ÂΩï */
.empty-checkins {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
