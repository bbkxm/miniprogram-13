.filter-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f0f8ff;
  color: #4285f4;
  padding: 10px 16px;
  margin-bottom: 10px;
  border-radius: 8px;
  font-size: 14px;
}

.clear-filter {
  color: #ff5252;
  font-size: 14px;
  padding: 4px 8px;
}

/* Âú∞ÂõæÂÆπÂô® */
.map-container {
  width: 100%;
