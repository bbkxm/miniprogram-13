.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 标签页样式 */
.tabs {
  display: flex;
  background: #fff;
  padding: 0 32rpx;
  position: sticky;
  top: 0;
  z-index: 1;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4080FF;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #4080FF;
  border-radius: 2rpx;
}

/* 活动列表样式 */
.activities {
  padding: 24rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.activity-image {
  width: 100%;
  height: 320rpx;
}

.activity-info {
  padding: 24rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.activity-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.activity-time, .activity-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 加载中状态 */
.loading {
  padding: 32rpx;
  text-align: center;
}

/* 空状态 */
.empty {
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
  display: block;
}

.action-button {
  display: inline-block;
  padding: 20rpx 64rpx;
  background: #4080FF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 100rpx;
  border: none;
} 